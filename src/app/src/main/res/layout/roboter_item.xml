<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="15dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivRoboter"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:background="#E8F3EA"
        android:clickable="true"
        android:checkable="true"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundCorner" />

    <TextView
        android:id="@+id/tvRoboter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:text="deineMudda"
        android:textColor="#020202"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivRoboter"
        app:layout_constraintStart_toStartOf="@+id/ivRoboter"
        app:layout_constraintTop_toTopOf="@+id/ivRoboter" />

    <TextView
        android:id="@+id/tvPfeil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="15dp"
        android:text=">"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivRoboter"
        app:layout_constraintEnd_toEndOf="@+id/ivRoboter"
        app:layout_constraintTop_toTopOf="@+id/ivRoboter" />

</androidx.constraintlayout.widget.ConstraintLayout>